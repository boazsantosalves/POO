class Caneta {
    String modelo;
    String cor;
    float ponta;
    int carga;
    boolean tampada;
    
    void status(){
        System.out.println("Uma caneta " + this.cor);
        System.out.println("Ela está tampada? " + this.tampada);
        System.out.println("Minha carga é: " + this.carga + "%");
    }
    
    void rabiscar(){
        if (this.tampada==true){
            System.out.println("Erro, a caneta está tampada");
        }
        else{
            System.out.println("Estou rabiscando");
        }
        
    }
    
    void tampar(){
        this.tampada = true;
        
    }
    
    void destampar(){
        this.tampada = false;
          
    }
    
    
    
}

class Main{
  public static void main(String[] args){
    Caneta c1 = new Caneta();
    c1.modelo = "top";
    c1.cor = "azul";
    c1.ponta = 0.5f;
    c1.tampada = false;
    c1.status();
    System.out.println("Oi");


  }

}

